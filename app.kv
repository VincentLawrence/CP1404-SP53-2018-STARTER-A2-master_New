# create your Kivy layout in the kv language here
BoxLayout:
    orientation: 'horizontal'
    padding: 7
    BoxLayout:
        size_hint_x: 0.4
        padding: 7
        orientation: 'vertical'
        Label:
            text: "Sort by:"

        Spinner:
            id: sort_option
            text: 'Select here'
            values: ('Title', 'Artist', 'Year')
            on_text: app.sorting(self.text)


        Label:
            text: "Add New Song..."

        Label:
            text: "Title :"

        TextInput:
            id: title_fill

        Label:
            text: "Artist :"

        TextInput:
            id: artist_fill

        Label:
            text: "Year :"

        TextInput:
            id: year_fill

        Button:
            text: "Add Song"
            on_release: app.add_song()

        Button:
            text: "Clear"
            on_release: app.clear_all()


